@model MoviesProject.Models.StreamingPlatform

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container w-50 mt-5 add-new">
    <h2 class="create-text m-4">Delete StreamingPlatform</h2>
    <h3 class="text-center">Are you sure you want to delete this StreamingPlatform?</h3>
    <div class="container w-50 mt-5">
    <dl class="row">
        <dt class = "col-sm-6">
            @Html.DisplayNameFor(model => model.PlatformName)
        </dt>
        <dd class = "col-sm-6 text-end">
            @Html.DisplayFor(model => model.PlatformName)
        </dd>
        <dt class = "col-sm-6">
            @Html.DisplayNameFor(model => model.SubscriptionCost)
        </dt>
        <dd class = "col-sm-6 text-end">
            @Html.DisplayFor(model => model.SubscriptionCost)
        </dd>
    </dl>

        <form asp-action="Delete" class="row g-3">
        <input type="hidden" asp-for="StreamingPlatformID" />
            <div class="col-md-6">
                <a asp-action="Index" class="btn">Back to Platforms</a>
            </div>
            <div class="col-md-6 text-end">
                <input type="submit" value="Delete" class="btn" />
            </div>
    </form>
</div>
</div>
